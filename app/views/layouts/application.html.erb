<!DOCTYPE html>
<html>
  <head>
    <title>Monettary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>

    <div class="main-container" style="height: 650px; width: auto; margin: 50px 200px; background-color: #0A1C5B; border-radius: 21px; box-shadow: 0px 0px 3px;">
      <%= render 'shared/navbar' %>
      <%= render 'shared/flashes' %>
      <div class="body d-flex">
        <%= render 'shared/side_bar' %>
        <div class="action-container" style="width: 740px;">
          <%= yield %>
        </div>
      </div>
    </div>

  </body>
</html>
