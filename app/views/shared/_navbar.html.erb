<div class="navbar navbar-expand-sm navbar-light navbar-lewagon" style="border-radius: 21px 21px 0px 0px; height: 68px; box-shadow: 0px 0px 3px">
  <%= link_to "#", class: "navbar-brand" do %>
    <%= image_tag "cryptocurrency.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item active" id="information-key">
          <i class="fas fa-info-circle"></i>
          <% link_to "Home", "#", class: "nav-link" %>
        </li>
      <div class="container box-sizing" id="account-balance" data="text">
        <li class="nav-item" id="wallet">
          <i class="fas fa-wallet logo"></i>
          <% link_to "Assets", "#", class: "nav-link" %>
      </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
