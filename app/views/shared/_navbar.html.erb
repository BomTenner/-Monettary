<div class="navbar navbar-expand-sm navbar-lewagon" style="border-radius: 21px 21px 0px 0px; height: 68px; box-shadow: 0px 0px 3px">
  <div class="logo">
    <%= link_to root_path , class: "navbar-brand" do %>
      <%= image_tag "cryptocurrency.png" %>
    <% end %>
  </div>
  <div class="other-info d-flex">
    <div class="wallet-balance-sum d-flex" style="width: 150px; height: 40px; border: 1px solid white; border-radius: 12px;">
      <i class="fas fa-wallet logo" style="margin-left: 10px;"></i>
      <p class="final-balance" style="margin-top: 15px; margin-left: 15px;"> $<%= @final_balance %>  </p>
    </div>
    <div class="btn-group " style="margin: 0px 15px; background-color: none;">
      <button type="button" class="btn btn-secondary d-flex" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fas fa-cog" style="font-size: 20px;"></i>
      </button>
      <div class="dropdown-menu dropdown-menu-right">
        <button class="dropdown-item" type="button">Profile</button>
        <button class="dropdown-item" type="button">Settings</button>
        <button class="dropdown-item" type="button"><%= link_to "Log out", destroy_user_session_path, method: :delete %></button>
      </div>
    </div>
  </div>
</div>


