<div class="container-exchange d-none">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <%= simple_form_for(@exchange, url: exchanges_path) do |f| %>
  <div class="exchange-boxes" >
    <div class="from-box">
      <h4 class="direction">From</h4>
      <div class="box">
        <%= f.input :assets, collection: @assets, label: "Choose Asset", input_html: { class: "sending-asset"} %>
        <%= f.input :sending_address_id, collection: [], input_html: {data: { addresses: @addresses.to_json} }, label: "Select address:" %>

        <div class="exchange-amount-box d-flex flex-column">
          <%= f.input :sending_amount, as: :integer, label: "Amount:" %>
        </div>
      </div>
    </div>
    <div class="arrow">
      <i class="fas fa-long-arrow-alt-right" style="font-size: 40px; margin: 0px 10px;"></i>
    </div>
    <div class="to-box">
      <h4 class="direction">To</h4>
      <div class="box">
        <%= f.input :assets, collection: @assets, label: "Choose Asset", input_html: { class: "receiving-asset"} %>
        <%= f.input :receiving_address_id, collection: [], input_html: {data: { addresses: @addresses.to_json} }, label: "Select address:" %>

        <div class="exchange-amount-box d-flex flex-column">
          <%= f.input :receiving_amount, as: :integer, label: "Amount:" %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Continue", new_exchange_path, class: "continue-button d-flex justify-content-center align-items-center" %>
</div>

<div class="container-scanning-exchanges d-none">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <div class="scanning-box">
    <h6 style="margin-top: 3px;">Scanning exchanges for the best price</h6>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <div id="container">
      <div class="item"><%= image_tag "uniswap.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "1inch.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "kyber.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "sushi.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "curve.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "pancake.png", alt: "alttext", class: "circle-image" %></div>
    </div>
  </div>
</div>

<div class="container-select-exchange">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <div class="scanning-box">
    <h5 style="margin-top: 5px;">Select the best offer:</h5>
  </div>
</div>


  <% end %>

