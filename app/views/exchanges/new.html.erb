<div class="container-exchange">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <%= simple_form_for(@exchange, url: exchanges_path) do |f| %>
  <div class="exchange-boxes" >
    <div class="from-box">
      <h4 class="direction">From</h4>
      <div class="box">
        <%= f.input :assets, collection: @assets, label: "Choose Asset", input_html: { class: "sending-asset"} %>
        <%= f.input :sending_address_id, collection: [], input_html: {data: { addresses: @addresses.to_json} }, label: "Select address:" %>

        <div class="exchange-amount-box d-flex flex-column">
          <%= f.input :sending_amount, as: :integer, label: "Amount:" %>
        </div>
      </div>
    </div>
    <div class="arrow">
      <i class="fas fa-long-arrow-alt-right" style="font-size: 40px; margin: 0px 10px;"></i>
    </div>
    <div class="to-box">
      <h4 class="direction">To</h4>
      <div class="box">
        <%= f.input :assets, collection: @assets, label: "Choose Asset", input_html: { class: "receiving-asset"} %>
        <%= f.input :receiving_address_id, collection: [], input_html: {data: { addresses: @addresses.to_json} }, label: "Select address:" %>

        <div class="exchange-amount-box d-flex flex-column">
          <%= f.input :receiving_amount, as: :integer, label: "Amount:" %>
        </div>
      </div>
    </div>
  </div>
  <%= link_to "Continue", new_exchange_path, class: "continue-button d-flex justify-content-center align-items-center" %>
</div>

<div class="container-scanning-exchanges d-none">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <div class="scanning-box">
    <h6 style="margin-top: 3px;">Scanning exchanges for the best price</h6>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <div id="container">
      <div class="item"><%= image_tag "uniswap.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "1inch.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "kyber.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "sushi.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "curve.png", alt: "alttext", class: "circle-image" %></div>
      <div class="item"><%= image_tag "pancake.png", alt: "alttext", class: "circle-image" %></div>
    </div>
  </div>
</div>

<div class="container-select-exchange d-none">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <div class="scanning-box-fees">
    <h5 style="margin-top: 5px; margin-bottom: 17px;">Select the best offer:</h5>
    <table class="exchanges-table" style="text-align: center; margin-top: 10px;">
      <tr class="row-exchange column-names">
        <th></th>
        <th>Exchange</th>
        <th>ETH/BTC</th>
        <th>Fee</th>
        <th>Receive</th>
        <th></th>
      </tr>
      <tr class="row-exchange uniswap-table">
        <td><%= image_tag "uniswap.png", alt: "alttext", class: "circle-image-exchange" %></td>
        <td>Uniswap</td>
        <td>0.06</td>
        <td>$28</td>
        <td></td>
        <td><div class="select-button select-1">Select</div></td>
      </tr>
      <tr class="row-exchange 1inch-table">
        <td><%= image_tag "1inch.png", alt: "alttext", class: "circle-image-exchange" %></td>
        <td>1inch</td>
        <td>0.063</td>
        <td>$31</td>
        <td></td>
        <td><div class="select-button select-2">Select</div></td>
      </tr>
      <tr class="row-exchange kyber-table">
        <td><%= image_tag "kyber.png", alt: "alttext", class: "circle-image-exchange" %></td>
        <td>Kyber</td>
        <td>0.067</td>
        <td>$25</td>
        <td></td>
        <td><div class="select-button select-3">Select</div></td>
      </tr>
    </table>
    <div class="execute-exchange-buttons d-flex justify-content-around" style="width: 100%; margin-top: 30px;">
      <%= link_to "Cancel", new_exchange_path, class: "exchange-cancel-button" %>
      <div class="disable-button">
        <%= f.submit "Exchange", class: "execute-button pointer-none" %>
      </div>
    </div>
  </div>
</div>
  <% end %>

<div class="container-exchange-processing d-none">
  <h1 class="exchange-header">Exchange Cryptocurrency</h1>
  <div class="scanning-box-processing">
    <h5 style="margin-top: 5px; margin-bottom: 35px;">Executing the exchange</h5>
    <p><strong>1</strong> BTC for <strong>28.2</strong> ETH on</p>
    <h5 style="margin-bottom: 40px;">Uniswap <%= image_tag "uniswap.png", alt: "alttext", class: "circle-image" %></h5>
    <div class="snippet d-flex" data-title=".dot-pulse">
      <div class="stage">
        <div class="dot-pulse"></div>
      </div>
    </div>
  </div>
</div>

<div class="container-exchange-confirmation d-none">
  <h1 class="exchange-header">REGENERON</h1>
</div>



